<h1>Edit Task</h1>

<br>
<br>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed, @task.completed ? "faite" : "non faite"%>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<br>
<br>

<%= link_to "Back To list", tasks_path %>
